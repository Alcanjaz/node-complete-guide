extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card_header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://source.unsplash.com/random/800x600/?books")
                        .card__content
                            h2.product__prize $19.99
                            p.product__description Very Interesting Book
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No products :C

                        